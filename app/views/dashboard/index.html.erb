<div class="modal hide fade in" id="createProject">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Novo Trabalho</h3>
  </div>
  <div class="modal-body">    
    <%= render "projects/form" %>
  </div>
</div>

<form class="well form-search">
  <input type="text" class="input-large search-query">
  <button type="submit" class="btn btn-small">Procurar</button>
  <%= link_to "Adicionar Trabalho", "", :class => "btn btn-primary btn-small pull-right", "data-toggle" => "modal", :href => "#createProject" %>
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Últimos trabalhos</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td>
          <%= p.title %>
          <%= link_to "Ver", project_path(p), :class => "btn btn-success btn-mini pull-right" %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
