<%- model_class = @college.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @college.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:short) %>:</strong><br>
  <%= @college.short %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              colleges_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_college_path(@college), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              college_path(@college),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
